    $(document).ready(function () {
    // Function to close the alert
    function vanish() {
        $('#myAlert').fadeOut('fast');
    }
    // Close the alert on button click
    $('#close').click(vanish);

    // Automatically close the alert after 3 seconds
    setTimeout(vanish, 3000);
    });
    </script>
